@if (TempData["message"] != null)
{
    @* <div class="alert alert-@TempData["status"] alert-dismissible fade show" role="alert">
        <i class="bi bi-info-circle"></i> @TempData["message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        '@TempData["status"]' === "success"
            ? toastr.success('@TempData["message"]')
            : '@TempData["status"]' === "warning"
            ? toastr.warning('@TempData["message"]')
            : '@TempData["status"]' === "danger"
            ? toastr.error('@TempData["message"]')
            : toastr.info('@TempData["message"]');
    </script>
}

@if (TempData["error"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error('@TempData["error"]');
    </script>
}