@model Category

<form asp-action="Delete" method="post">
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Delete category</h2>
        <hr>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" type="text" class="form-control" disabled>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="DisplayOrder" class="p-0"></label>
        <input asp-for="DisplayOrder" type="number" class="form-control" disabled>
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control"><i class="bi bi-x-circle-fill"></i> Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control"><i class="bi bi-box-arrow-left"></i> Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}