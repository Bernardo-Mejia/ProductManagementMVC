@model Category

<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden">
    <input asp-for="CreatedAt" type="hidden">
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Edit category</h2>
        <hr>
    </div>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    <div class="mb-3 row p-1">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" type="text" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="DisplayOrder" class="p-0"></label>
        <input asp-for="DisplayOrder" type="number" class="form-control">
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control"><i class="bi bi-pencil-fill"></i> Update</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control"><i class="bi bi-box-arrow-left"></i> Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}