@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Product
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.ISBN</td>
                        <td>@item.ListPrice</td>
                        <td>@item.Author</td>
                        <td>@* @item.Category *@</td>
                        <td>
                            <div class="w-100 btn-group d-flex flex-wrap justify-content-center align-items-center" role="group">
                                @* <a asp-action="Details" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-info mx-2 my-1"><i class="bi bi-pencil-square"></i> Detail</a> *@
                                <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-warning mx-2 my-1"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger mx-2 my-1"><i class="bi bi-trash3-fill"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>