<div class="row">
    <div class="col-6 col-md-3">
        <a asp-Page="/Categories/Edit" asp-route-id="@Model.categories.Id" class="btn btn-primary form-control"><i class="bi bi-pencil-square"></i> Edit</a>
    </div>
    <div class="col-6 col-md-3">
        <a asp-page="/Categories/Index" class="btn btn-outline-secondary form-control"><i class="bi bi-box-arrow-left"></i> Back to List</a>
    </div>
