@page
@model ProductManagementWebRazor_Temp.Pages.Categories.DetailsModel
@{
}

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <i class="bi bi-key-fill"></i> @Html.DisplayNameFor(model => model.categories.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.categories.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.categories.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.categories.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.categories.DisplayOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.categories.DisplayOrder)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.categories.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.categories.CreatedAt)
        </dd>
