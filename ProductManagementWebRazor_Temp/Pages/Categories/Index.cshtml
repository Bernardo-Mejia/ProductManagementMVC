@page
@using ProductManagementWebRazor_Temp.Models;
@model ProductManagementWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Create a new category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display order</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category item in Model.CategoryList.OrderByDescending(c => c.DisplayOrder))
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="btn-group d-flex flex-wrap justify-content-center align-items-center" role="group">
                            <a asp-page="/categories/details" asp-route-id="@item.Id" class="btn btn-info mx-2 my-1"><i class="bi bi-pencil-square"></i> Detail</a>
                            <a asp-page="/categories/edit" asp-route-id="@item.Id" class="btn btn-warning mx-2 my-1"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-page="/categories/delete" asp-route-id="@item.Id" class="btn btn-danger mx-2 my-1"><i class="bi bi-trash3-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>