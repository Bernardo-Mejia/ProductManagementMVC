@page
@model ProductManagementWebRazor_Temp.Pages.Categories.CreateModel

<form asp-action="Create" method="post">
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Create category</h2>
        <hr>
    </div>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    <div class="mb-3 row p-1">
        <label asp-for="category.Name" class="p-0"></label>
        <input asp-for="category.Name" type="text" class="form-control">
        <span asp-validation-for="category.Name" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="category.DisplayOrder" class="p-0"></label>
        <input asp-for="category.DisplayOrder" type="number" class="form-control">
        <span asp-validation-for="category.DisplayOrder" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control"><i class="bi bi-plus-lg"></i> Create</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-page="/Categories/Index" class="btn btn-outline-secondary border form-control"><i class="bi bi-box-arrow-left"></i> Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}